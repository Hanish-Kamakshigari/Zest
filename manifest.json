{
    "manifest_version": 3,
    "name": "Zest" ,
    "version" : "1.0" ,
    "description" : "Get the juice, skip the pulp" ,
    "permissions" : ["activeTab", "scripting"] ,
    "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Summarize Page"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
